<div id="tsparticles" aria-hidden="true"></div>

<script>
  import { tsParticles } from "@tsparticles/engine";
  import { loadSlim } from "@tsparticles/slim";

  async function loadParticles() {
    // Respetar preferencia de movimiento reducido
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    if (prefersReducedMotion) {
      return; // No cargar partículas si el usuario prefiere movimiento reducido
    }

    // Detectar dispositivo móvil o pantalla pequeña
    const isMobile = window.innerWidth < 768;
    const isLowPerfDevice = navigator.hardwareConcurrency && navigator.hardwareConcurrency <= 4;

    // Ajustar cantidad de partículas según el dispositivo
    const particleCount = isMobile || isLowPerfDevice ? 30 : 60;
    const fpsLimit = isMobile ? 30 : 60;

    await loadSlim(tsParticles);

    await tsParticles.load({
      id: "tsparticles",
      options: {
        background: {
          color: {
            value: "transparent",
          },
        },
        fpsLimit: fpsLimit,
        interactivity: {
          events: {
            onClick: {
              enable: !isMobile, // Desactivar click en móviles
              mode: "push",
            },
            onHover: {
              enable: !isMobile, // Desactivar hover en móviles
              mode: "repulse",
            },
          },
          modes: {
            push: {
              quantity: 2,
            },
            repulse: {
              distance: 100,
              duration: 0.4,
            },
          },
        },
        particles: {
          color: {
            value: ["#ef4444", "#3b82f6", "#10b981"],
          },
          links: {
            color: "#ef4444",
            distance: 150,
            enable: true,
            opacity: 0.2,
            width: 1,
          },
          move: {
            direction: "none",
            enable: true,
            outModes: {
              default: "bounce",
            },
            random: false,
            speed: isMobile ? 0.5 : 1,
            straight: false,
          },
          number: {
            density: {
              enable: true,
            },
            value: particleCount,
          },
          opacity: {
            value: 0.4,
          },
          shape: {
            type: "circle",
          },
          size: {
            value: { min: 1, max: 2 },
          },
        },
        detectRetina: true,
        pauseOnBlur: true, // Pausar cuando la pestaña no está activa
        pauseOnOutsideViewport: true, // Pausar cuando no está en viewport
      },
    });
  }

  // Usar requestIdleCallback para cargar en momento óptimo
  if ('requestIdleCallback' in window) {
    requestIdleCallback(() => loadParticles(), { timeout: 2000 });
  } else if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", loadParticles);
  } else {
    setTimeout(loadParticles, 100);
  }
</script>

<style>
  #tsparticles {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 0;
    pointer-events: none;
    will-change: transform;
    contain: strict;
  }

  @media (prefers-reduced-motion: reduce) {
    #tsparticles {
      display: none;
    }
  }
</style>
