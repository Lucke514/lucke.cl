---
import Footer from 'shared/Footer/Footer.astro';
import Header from 'shared/Header/Header.astro';

// Tipografía de la página
import '@fontsource-variable/onest';

interface Props {
	title: string;
	description?: string;
	ogImage?: string;
}

const { title, description = "Software Engineer especializado en Node.js, React, microservicios y arquitecturas cloud (AWS, Azure, GCP). +3 años construyendo soluciones escalables.", ogImage = "/img/Avatar.webp" } = Astro.props;

const siteUrl = Astro.site?.href || 'https://lucke.cl';
const canonicalURL = new URL(Astro.url.pathname, siteUrl);
const socialImageURL = new URL(ogImage, siteUrl);
---
<!DOCTYPE html>
<html lang="es" class="dark scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content="Lucas Gonzalez" />
    <meta name="keywords" content="Software Engineer, Full Stack Developer, Node.js, NestJS, React, Angular, Astro, AWS, Azure, GCP, Microservicios, Backend Developer, Cloud Architecture, DevOps, CI/CD" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/webp" href="/img/Avatar.webp" />
    <link rel="apple-touch-icon" href="/img/Avatar.webp" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />
    <meta property="og:locale" content="es_CL" />
    <meta property="og:site_name" content="Lucas Gonzalez - Software Engineer" />
    
    <!-- Twitter Card -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImageURL} />
    
    <!-- Schema.org JSON-LD -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Lucas Benjamín González Espinosa",
      "jobTitle": "Software Engineer",
      "description": "Software Engineer especializado en desarrollo Full Stack con Node.js, React y arquitecturas cloud",
      "url": "https://lucke.cl",
      "email": "lucas.gonzalez.espinosa@outlook.com",
      "telephone": "+56955164337",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Santiago",
        "addressCountry": "Chile"
      },
      "sameAs": [
        "https://github.com/lucke514",
        "https://www.linkedin.com/in/lucas-gonzalez-espinosa"
      ],
      "knowsAbout": [
        "Node.js",
        "NestJS",
        "React",
        "Angular",
        "Astro",
        "TypeScript",
        "JavaScript",
        "AWS",
        "Azure",
        "GCP",
        "Docker",
        "Microservices",
        "REST API",
        "GraphQL"
      ]
    }
    </script>

    <!-- Preload de CSS global -->
    <link rel="preload" as="style" href="/styles/globals.css" />
    <link rel="stylesheet" href="/styles/globals.css" />
 </head>
  <body class="bg-gradient-to-b from-red-500/10 to-transparent dark:from-red-500/5 dark:text-white overflow-x-hidden max-w-screen w-screen transition-colors duration-500 min-h-screen">
    <Header />
    <main class="w-screen max-w-5xl mx-auto relative z-10">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --accent: 239, 68, 68; /* red-500 */
    --accent-light: 252, 165, 165; /* red-300 */
    --accent-dark: 153, 27, 27; /* red-800 */
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      rgba(var(--accent-dark), 0.1) 60%
    );
  }

  ::selection {
    background-color: rgb(var(--accent));
    color: white;
  }

  html {
    font-family: 'Onest Variable', sans-serif;
    background-size: 224px;
    scroll-behavior: smooth;
  }

  body {
    display: grid;
    grid-template-rows: auto 1fr auto;
    background-attachment: fixed;
  }

  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: rgb(var(--accent-dark), 0.1);
  }

  ::-webkit-scrollbar-thumb {
    background: rgb(var(--accent));
    border-radius: 5px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: rgb(var(--accent-dark));
  }

  /* Smooth transitions for dark mode */
  .dark {
    color-scheme: dark;
  }

  /* Gradient Animation */
  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .animate-gradient {
    background-size: 200% 200%;
    animation: gradient 3s ease infinite;
  }

  /* Floating Animation */
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  /* Pulse Glow */
  @keyframes pulse-glow {
    0%, 100% {
      box-shadow: 0 0 20px rgba(239, 68, 68, 0.4);
    }
    50% {
      box-shadow: 0 0 40px rgba(239, 68, 68, 0.8);
    }
  }

  .animate-pulse-glow {
    animation: pulse-glow 2s ease-in-out infinite;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
    
    *, *::before, *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
      scroll-behavior: auto !important;
    }
  }
</style>
