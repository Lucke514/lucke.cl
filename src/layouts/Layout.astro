---
import Footer from 'shared/Footer/Footer.astro';
import Header from 'shared/Header/Header.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/png" href="/img/Avatar.png" />
    <link rel="stylesheet" href="/styles/globals.css" />
  </head>
  <body class="bg-white text-black dark:bg-black/90 dark:text-white overflow-x-hidden max-w-screen w-screen transition-all duration-500 h-screen">
    <Header />
    <main class="w-screen max-w-5xl mx-auto px-10 md:px-0">
      <slot />
    </main>
    <Footer />
  </body>
</html>


<style>
  body {
    display: grid;
    grid-template-rows: auto 1fr auto;
  }
</style>