---
import Header from 'shared/Header/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/png" href="/img/Avatar.png" />
    <link rel="stylesheet" href="/src/styles/globals.css" />
  </head>
  <body class="bg-red-50 text-black dark:bg-black/90 dark:text-white overflow-x-hidden max-w-screen">
    <Header />
    <slot />
  </body>
</html>